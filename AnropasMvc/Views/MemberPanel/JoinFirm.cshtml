@using EntityLayer.Concreate
@model List<Team>
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Firmaya Katıl - ANROPAS</title>
    <!-- Favicon -->
    <link rel="icon" href="/AdminLTE-3.0.4/frontend/img/favicon.ico" type="image/x-icon">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <!-- CSS Dosyaları -->
    <link rel="stylesheet" href="/AdminLTE-3.0.4/frontend/css/auth.css">
    <link rel="stylesheet" href="~/AdminLTE-3.0.4/frontend/css/joinfirm.css">
</head>
<body>
    <a href="/Login/AfterLogin/" class="back-link">
        <i class="fas fa-arrow-left"></i>
        <span>Firma Seçim Ekranına Dön</span>
    </a>
    <div class="login-page wide-form">
        <div class="login-box">
            <div class="login-header">
                <h1>ANROPAS</h1>
                <div class="dot"></div>
                <h2>Kayıtlı Firmalar</h2>
            </div>

            <!-- Firma Ekleme Formu -->
            <div class="company-add-form">
                @using (Html.BeginForm("NewJoinFirm", "MemberPanel", FormMethod.Post))
                {
                    <div class="form-row">
                        <div class="form-group">
                            <input type="text" id="FirmCode" name="FirmCode" placeholder="Firma Kodu" required>
                        </div>
                        <div class="form-group">
                            <input type="text" id="FirmName" name="FirmName" placeholder="Firma Adı" required>
                        </div>
                        <div class="form-group button-group">
                            <button type="submit" class="add-btn">
                                <i class="fas fa-building"></i>
                                <span>Firmaya Katıl</span>
                            </button>
                        </div>
                    </div>
                }
            </div>

            <div class="company-table">
                <div class="table-container">
                    <table>
                        <thead>
                            <tr>
                                <th><i class="fas fa-hashtag"></i> Firma ID</th>
                                <th><i class="fas fa-building"></i> Firma Adı</th>
                                <th><i class="fas fa-user-tag"></i> Rol</th>
                                <th><i class="fas fa-cogs"></i> İşlem</th>
                            </tr>
                        </thead>
                        <tbody id="companyTableBody">
                            @foreach (var item in Model)
                            {
                                string roleBadgeClass = "";
                                string roleText = "";
                                string roleIcon = "";

                                if (item.MemberRole == "K")
                                {
                                    roleBadgeClass = "role-badge founder";
                                    roleText = "Kurucu";
                                    roleIcon = "fa-crown";
                                }
                                else if (item.MemberRole == "P")
                                {
                                    roleBadgeClass = "role-badge personnel";
                                    roleText = "Personel";
                                    roleIcon = "fa-user-tie";
                                }

                                <tr>
                                    <td>
                                        <span class="firm-id">@item.Firm.FirmID</span>
                                    </td>
                                    <td>
                                        <a href="#">
                                            @item.Firm.FirmName
                                        </a>
                                        <br />
                                        <small>
                                            <i class="far fa-calendar-alt"></i> @(((DateTime)item.Firm.FirmBirthDate).ToString("dd MMM yyyy"))
                                        </small>
                                    </td>
                                    <td>
                                        <span class="@roleBadgeClass">
                                            <i class="fas @roleIcon"></i>
                                            @roleText
                                        </span>
                                    </td>
                                    <td>
                                        <a class="action-btn" href="/MemberPanel/SetFirmSession/@item.FirmID">
                                            <i class="fas fa-sign-in-alt"></i>
                                            Giriş Yap
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <!-- jQuery -->
    <script src="~/AdminLTE-3.0.4/plugins/jquery/jquery.min.js"></script>
    <!-- Bootstrap -->
    <script src="~/AdminLTE-3.0.4/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- AdminLTE -->
    <script src="~/AdminLTE-3.0.4/dist/js/adminlte.js"></script>
</body>
</html>