@model EntityLayer.Concreate.Member
@{
    Layout = null;
}


<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Kayıt Ol - ANROPAS</title>
    <!-- Favicon -->
    <link rel="icon" href="/AdminLTE-3.0.4/frontend/img/favicon.ico" type="image/x-icon">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <!-- CSS Dosyaları -->
    <link rel="stylesheet" href="/AdminLTE-3.0.4/frontend/css/auth.css">
</head>
<body>
    <a href="/Home/HomePage/" class="back-link">
        <i class="fas fa-arrow-left"></i>
        <span>Anasayfa</span>
    </a>
    <div class="login-page" style="max-width: 600px;">
        <div class="login-box">
            <div class="login-header">
                <h1>ANROPAS</h1>
                @*<div class="dot"></div>*@
                <h2>Kayıt Ol</h2>
            </div>
            <div class="login-form">
                @using (Html.BeginForm("SignUp", "Login", FormMethod.Post))
                {
                    <form id="register-form" @*onsubmit="handleRegisterSubmit(event)"*@>
                        <div class="form-row">
                            <div class="form-group">
                                <input type="text" id="name" name="MemberName" placeholder="İsim" required>
                            </div>
                            <div class="form-group">
                                <input type="text" id="surname" name="MemberSurname" placeholder="Soyisim" required>
                            </div>
                        </div>

                        <div class="form-group">
                            <input type="text" id="email" name="MemberPhone" placeholder="Telefon" required>
                        </div>

                        <div class="form-group">
                            <input type="email" id="email" name="MemberMail" placeholder="E-posta" required>
                        </div>

                        <div class="form-row">
                            <div class="form-group input-with-icon">
                                <input type="password" id="password" name="MemberPassword" placeholder="Şifre" required>
                                <i class="fas fa-eye-slash toggle-password" @*onclick="togglePassword(this)"*@></i>
                            </div>
                            <div class="form-group input-with-icon">
                                <input type="password" id="password_confirm" name="ConfirmPassword" placeholder="Şifre Tekrar" required>
                                <i class="fas fa-eye-slash toggle-password" @*onclick="togglePassword(this)"*@></i>
                            </div>
                        </div>

                        <div class="form-row">
                            <div class="form-group">
                                <label for="birthdate" class="input-label">Doğum Tarihi</label>
                                <input type="date" id="birthdate" name="MemberBirthDate" required>
                            </div>
                            <div class="form-group">
                                <label class="input-label">Cinsiyet</label>
                                <div class="radio-group">
                                    <div class="radio-option">
                                        <input type="radio" id="gender-female" name="MemberGender" value="K" required>
                                        <label for="gender-female">Kadın</label>
                                    </div>
                                    <div class="radio-option">
                                        <input type="radio" id="gender-male" name="MemberGender" value="E" required>
                                        <label for="gender-male">Erkek</label>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="form-row">
                            <div class="form-group" style="grid-column: 1 / -1;">
                                @Html.DropDownListFor(x => x.MemberTitleID, (List<SelectListItem>)ViewBag.vlmtm, "Ünvan Seçiniz", new { @class = "form-control", id = "title" })
                            </div>
                        </div>

                        <button type="submit" class="login-btn" id="registerButton">
                            <span class="btn-text">Kayıt Ol</span>
                            <span class="spinner-border spinner-border-sm d-none" role="status" aria-hidden="true"></span>
                        </button>
                    </form>
                }
                <div class="register-option">
                    <span>Zaten hesabınız var mı?</span>
                    <a href="/Login/Login/" class="register-link">Giriş Yapın</a>
                </div>
            </div>
        </div>
    </div>

    <script src="/AdminLTE-3.0.4/frontend/js/auth.js"></script>
</body>
</html> 