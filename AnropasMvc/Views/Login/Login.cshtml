
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Giriş Yap - ANROPAS</title>
    <link rel="icon" href="/AdminLTE-3.0.4/frontend/img/favicon.ico" type="image/x-icon">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/AdminLTE-3.0.4/frontend/css/auth.css">
</head>
<body>
    <a href="/Home/HomePage/" class="back-link">
        <i class="fas fa-arrow-left"></i>
        <span>Anasayfa</span>
    </a>
    <div class="login-page narrow-form">
        <div class="login-box">
            <div class="login-header">
                <h1>ANROPAS</h1>
                @*<div class="dot"></div>*@
                <h2>Hoş Geldiniz</h2>
            </div>
            <div class="login-form">
                @using (Html.BeginForm("Login", "Login", FormMethod.Post))
                {
                    <form id="login-form" @*onsubmit="handleLoginSubmit(event)"*@>
                        <div class="form-group">
                            <input type="text" id="email" name="MemberMail" placeholder="E-posta" required>
                        </div>
                        <div class="form-group input-with-icon">
                            <input type="password" id="password" name="MemberPassword" placeholder="Şifre" required>
                            <i class="fas fa-eye-slash toggle-password" @*onclick="togglePassword(this)"*@></i>
                        </div>
                        <div class="form-options">
                            <div class="remember-me">
                                <input type="checkbox" id="remember" name="remember">
                                <label for="remember">Beni Hatırla</label>
                            </div>
                            <a href="#" class="forgot-link">Şifremi Unuttum</a>
                        </div>
                        <button type="submit" class="login-btn" id="loginButton">
                            <span class="btn-text">Giriş Yap</span>
                            <span class="spinner-border spinner-border-sm d-none" role="status" aria-hidden="true"></span>
                        </button>
                    </form>
                }
                <div class="register-option">
                    <span>Hesabınız yok mu?</span>
                    <a href="/Login/SignUp/" class="register-link">Kayıt Olun</a>
                </div>
            </div>
        </div>
    </div>

    <script src="/AdminLTE-3.0.4/frontend/js/auth.js"></script>

</body>
</html>


